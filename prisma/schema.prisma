// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entry {
  id String
  ts DateTime

  community String

  @@id([id])
}

model Community {
  id    String
  ts    DateTime
  entry String

  data Bytes

  @@id([id])
  @@index([entry])
}

model Proposal {
  id     String
  ts     DateTime
  entry  String
  author String

  community String
  group     String

  data Bytes

  @@id([id])
  @@index([entry, group])
  @@index([community, group])
  @@index([author])
}

model Vote {
  id     String
  ts     DateTime
  author String

  community String
  group     String
  proposal  String

  data Bytes

  @@id([id])
  @@unique([proposal, author])
  @@index([author])
}
