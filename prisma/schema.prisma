// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DID {
  did String

  community String
  stars     Int

  ts DateTime

  @@id([did])
}

model Community {
  id String

  did String

  data Bytes

  @@id([id])
  @@index([did])
}

model Group {
  community String
  id        String

  did String

  @@id([community, id])
  @@index([did])
}

model Proposal {
  id String

  did       String
  community String
  group     String

  data Bytes

  @@id([id])
  @@index([community, group])
}

model Vote {
  id String

  did       String
  community String
  group     String
  proposal  String

  data Bytes

  @@id([id])
  @@index([proposal])
}
