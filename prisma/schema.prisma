// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entry {
  id String

  community String
  stars     Int
  ts        DateTime

  @@id([id])
}

model Community {
  id    String
  entry String

  data Bytes

  @@id([id])
  @@index([entry])
}

model Group {
  community String
  id        String
  entry     String

  @@id([community, id])
  @@index([entry])
}

model Proposal {
  id    String
  entry String

  community String
  group     String

  data Bytes

  @@id([id])
  @@index([entry, group])
  @@index([community, group])
}

model Vote {
  id String

  community String
  group     String
  proposal  String

  data Bytes

  @@id([id])
  @@index([proposal])
}
