// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Community {
  permalink String
  entry     String

  data Json

  ts DateTime

  @@id([permalink])
  @@index([entry])
}

model Proposal {
  permalink String
  entry     String
  author    String
  community String
  group     String

  data Json

  votes Int

  ts            DateTime
  ts_announcing DateTime?
  ts_voting     DateTime?

  @@id([permalink])
  @@index([entry, group])
  @@index([community, group])
  @@index([author])
}

model Vote {
  permalink String
  author    String
  community String
  group     String
  proposal  String

  data Json

  ts DateTime

  @@id([permalink])
  @@unique([proposal, author])
  @@index([author])
}

model Entry {
  did       String
  community String

  subscribers Int
  proposals   Int
  votes       Int

  ts DateTime

  @@id([did])
}

model Choice {
  proposal String
  option   String

  power Decimal

  @@id([proposal, option])
}

model Subscription {
  entry      String
  subscriber String

  ts DateTime

  @@id([entry, subscriber])
}
