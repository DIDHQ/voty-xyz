// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Storage {
  permalink String

  data Json

  @@id([permalink])
}

model Community {
  id        String
  permalink String

  subscribers Int
  proposals   Int
  votes       Int
  ts          DateTime

  @@id([permalink])
  @@index([id])
}

model Group {
  id                  String
  permalink           String
  community_id        String
  community_permalink String

  proposals Int
  votes     Int
  ts        DateTime

  @@id([permalink])
  @@index([id])
}

model Proposal {
  permalink           String
  community_id        String
  community_permalink String
  group_id            String
  group_permalink     String

  proposer   String
  votes      Int
  ts         DateTime
  ts_pending DateTime?
  ts_voting  DateTime?

  @@id([permalink])
  @@index([community_id, group_id])
}

model Vote {
  permalink          String
  proposal_permalink String

  voter String
  ts    DateTime

  @@id([permalink])
  @@unique([proposal_permalink, voter])
}

model Choice {
  proposal_permalink String
  option             String

  power Decimal

  @@id([proposal_permalink, option])
}

model Subscription {
  community_id String
  subscriber   String

  ts DateTime

  @@id([community_id, subscriber])
}
