// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Community {
  id   String
  did  String
  data Bytes

  @@id([id])
  @@index([did])
}

model Workgroup {
  id        String
  did       String
  community String

  @@id([id, community])
  @@index([did])
  @@index([community])
}

model Proposal {
  id        String
  did       String
  community String
  workgroup String
  data      Bytes

  @@id([id])
  @@index([did])
  @@index([community, workgroup])
}

model Vote {
  id        String
  did       String
  community String
  workgroup String
  proposal  String
  data      Bytes

  @@id([id])
  @@unique([did, proposal])
  @@index([community, workgroup])
  @@index([proposal])
}
