// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Community {
  permalink String
  ts        DateTime
  confirmed Boolean?
  entry     String

  data Bytes

  @@id([permalink])
  @@index([entry])
}

model Proposal {
  permalink String
  ts        DateTime
  confirmed Boolean?
  entry     String
  author    String

  community String
  workgroup String

  data Bytes

  votes Int

  @@id([permalink])
  @@index([entry, workgroup])
  @@index([community, workgroup])
  @@index([author])
}

model Vote {
  permalink String
  ts        DateTime
  confirmed Boolean?
  author    String

  community String
  workgroup String
  proposal  String

  data Bytes

  @@id([permalink])
  @@unique([proposal, author])
  @@index([author])
}

model Entry {
  did String
  ts  DateTime

  community String

  subscribers Int
  proposals   Int
  votes       Int

  @@id([did])
}

model Choice {
  proposal String
  option   String

  power Decimal

  @@id([proposal, option])
}

model Subscription {
  entry      String
  subscriber String

  ts DateTime

  @@id([entry, subscriber])
}
