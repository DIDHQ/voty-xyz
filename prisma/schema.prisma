// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entry {
  did String
  ts  DateTime

  community String

  @@id([did])
}

model Community {
  uri   String
  ts    DateTime
  entry String

  data Bytes

  @@id([uri])
  @@index([entry])
}

model Proposal {
  uri    String
  ts     DateTime
  entry  String
  author String

  community String
  group     Int

  data Bytes

  @@id([uri])
  @@index([entry, group])
  @@index([community, group])
  @@index([author])
}

model Vote {
  uri    String
  ts     DateTime
  author String

  community String
  group     Int
  proposal  String

  data Bytes

  @@id([uri])
  @@unique([proposal, author])
  @@index([author])
}
